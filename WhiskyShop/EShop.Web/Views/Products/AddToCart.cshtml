@model WhiskyShop.Domain.Domain.ProductInShoppingCart

<h1 class="text-center my-4">Add Product to Shopping Cart</h1>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card p-4 shadow-sm">
            <form asp-action="AddToCartConfirmed">
                <input type="hidden" asp-for="ProductId" />
                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="form-label">Quantity</label>
                    <input asp-for="Quantity" class="form-control" />
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Add To Cart" class="btn btn-info btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1 {
        color: #d4af37;
    }

    .card {
        background-color: #1f1f1f;
        border: none;
        border-radius: 10px;
    }

    .form-label {
        color: #d4af37;
    }

    .form-control {
        background-color: #2c2c2c;
        color: #e0e0e0;
        border: 1px solid #444;
    }

        .form-control:focus {
            background-color: #333;
            color: #fff;
            border-color: #d4af37;
            box-shadow: none;
        }

    .btn-info {
        background-color: #d4af37;
        border: none;
        color: #121212;
        padding: 10px 20px;
        font-size: 1.2rem;
        transition: background-color 0.3s ease;
    }

        .btn-info:hover {
            background-color: #b18d2c;
            color: #fff;
        }

    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
</style>
