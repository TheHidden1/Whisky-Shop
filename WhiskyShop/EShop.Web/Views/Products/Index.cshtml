@model List<WhiskyShop.Domain.Domain.Product>

@{
    ViewData["Title"] = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        padding: 50px 20px;
    }

    h1 {
        font-size: 3em;
        text-align: center;
        margin-bottom: 40px;
    }

    .card {
        background-color: #1e1e1e;
        color: #e0e0e0;
        border: none;
        border-radius: 10px;
        overflow: hidden;
        margin: 20px;
        transition: transform 0.2s;
    }

    .card:hover {
        transform: scale(1.05);
    }

    .card-img-top {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        height: 300px;
        object-fit: cover;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.5em;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 1.2em;
        margin-bottom: 20px;
    }

    .card-footer {
        background-color: #1e1e1e;
        border-top: none;
        padding: 20px;
        text-align: center;
    }

    .btn-info {
        background-color: #d4af37;
        color: #121212;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .btn-info:hover {
        background-color: #b18d2c;
    }
</style>

<div class="container">
    <h1>Whisky Selection</h1>
    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        if (i % 3 == 0)
        {
            @:<div class="row justify-content-center">
        }
        <div class="col-md-3 m-3">
            <div class="card">
                <img class="card-img-top" src="@item.ProductImage" alt="@item.ProductName">
                <div class="card-body">
                    <h5 class="card-title">@item.ProductName</h5>
                    <p class="card-text">@item.ProductDescription</p>
                    <h6>Price: $@item.Price</h6>
                </div>
                <div class="card-footer">
                    <a asp-controller="Products" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-info">Add to Cart</a>
                </div>
            </div>
        </div>
        if (i % 3 == 2)
        {
            @:</div>
        }
    }
</div>
